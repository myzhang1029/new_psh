{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "builddir",
			"type": "shell",
			"command": "mkdir",
			"args": [
				"-p",
				"${workspaceRoot}/build"
			]
		},
		{
			"label": "cmake",
			"type": "shell",
			"options": {
				"cwd": "${workspaceRoot}/build"
			},
			"command": "cmake",
			"args": [
				"-G",
				"'Unix Makefiles'",
				".."
			],
			"dependsOn": [
				"builddir"
			]
		},
		{
			"label": "build",
			"type": "shell",
			"command": "make",
			"options": {
				"cwd": "${workspaceRoot}/build"
			},
			"dependsOn": [
				"cmake"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}